# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eco_points_db
DB_USER=eco_points_user
DB_PASSWORD=your_secure_password
DATABASE_URL=postgresql://eco_points_user:your_secure_password@localhost:5432/eco_points_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=eco-points-videos
AWS_S3_BUCKET_THUMBNAILS=eco-points-thumbnails

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@ecopoints.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Video Processing Configuration
MAX_VIDEO_SIZE_MB=100
MAX_VIDEO_DURATION_SEC=300
MIN_VIDEO_DURATION_SEC=10
THUMBNAIL_WIDTH=320
THUMBNAIL_HEIGHT=240

# Scoring Configuration
AUTO_APPROVE_THRESHOLD=80
AUTO_REJECT_THRESHOLD=30
MIN_GPS_ACCURACY_METERS=50
MAX_SUBMISSIONS_PER_DAY=10
POINTS_PER_APPROVED_SUBMISSION=100
POINTS_TO_CASH_RATE=0.01

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Maps Configuration
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
OPENSTREETMAP_URL=https://nominatim.openstreetmap.org

# Feature Flags
ENABLE_ML_CHECKS=false
ENABLE_LIVENESS_DETECTION=false
ENABLE_VIRUS_SCANNING=true
ENABLE_PUSH_NOTIFICATIONS=false